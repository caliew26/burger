{{!-- this is what the user will see and interact with --}}
<h1 class="nav">B-U-R-G-E-R-S!!</h1>

<div class="wrapper">
  <div class="burgersNotEaten">
    <h3>These burgers are Available</h3>
    <ul>
      {{!-- this is a forloop,  --}}
      {{#each burgers}}
      {{#unless this.devoured}}
      {{this.id}}.{{this.burger_name}}
        <p><span><button class="change-devour" data-id="{{id}}" data-newdevour=true>
        {{#if devoured}}devoured!{{else}}devour me!{{/if}}
        </button></span>
        </p>
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="eatenBurgers">
    <h3>The Burgers are GONE</h3>
    <ul>
      {{#each burgers}}
      {{#if this.devoured}}
      {{this.id}}.{{this.burger_name}}<br>
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <form id="create-form">
    <div class="form-group">
      <label for="burgerX"><b>Wanna Add A Burger?</b></label><br>
      <input type="text" name="burgerY" id="burgerY">
    </div>

    <div class="form-group">
      <label for="devour">Have you tried it?</label><br>
      <input type="radio" name="devoured" value="1" > YES!<br>
      <input type="radio" name="devoured" value="0"> NO!<br>
    </div>

    <button type="submit">Add Burger</button>

  </form>
  <footer>
    <p><a href="https://www.freepik.com/free-photos-vectors/background">Background vector created by freepik -
        www.freepik.com</a></p>
  </footer>
</div>


